<%= simple_form_for @organization do |f| %>
  <div class="field">
    <%= f.input :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.input :description %>
  </div>

  <div class="field">
    <%= f.input :street %>
  </div>

  <div class="field">
    <%= f.input :city %>
  </div>

  <div class="field">
    <%= f.input :state %>
  </div>

  <div class="field">
    <%= f.input :zipcode %>
  </div>

  <div class="field">
    <%= f.input :website_url, label: 'Website URL' %>
  </div>

  <div class="field">
    <%= f.input :charter_page_url, label: 'Charter Page URL' %>
  </div>
  
  <div class="field">
    <%= f.input :email, label: 'Email' %>
  </div>

  <div class="field">
    <%= f.label :organization_interests %><br />
    <%= f.collection_select "interest_ids", Interest.all, :id, :interest, {}, html_options = {multiple: true, class: "interests" } %>
  </div>

  <div class="field">
    <%= f.label :organization_skills %><br />
    <%= f.collection_select "skill_ids", Skill.all, :id, :skill, {}, html_options = {multiple: true, class: "skills" } %>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>
<% end %>
