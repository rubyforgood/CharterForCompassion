<div class="registration_form">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :private do %>
      <%= f.check_box :private, class: 'private' %> Show my name in search results
    <% end %>

    <%= f.label :user_interests, "Interests" %>
    <div class="autocomplete">
      <%= f.collection_select "interest_ids",
            Interest.all, :id, :interest, {},
            html_options = {multiple: true, class: "interests" } %>
    </div>

    <%= f.label :user_skills, "Skills" %>
    <div class="autocomplete">
      <%= f.collection_select "skill_ids",
            Skill.all, :id, :skill, {},
            html_options = {multiple: true, class: "skills" } %>
    </div>

    <%= f.label :street1, "Street line 1" %>
    <%= f.text_field :street1 %>

    <%= f.label :street2, "Street line 2 (optional)" %>
    <%= f.text_field :street2 %>

    <%= f.label :street3, "Street line 3 (optional)" %>
    <%= f.text_field :street3 %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>

      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>

    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off" %>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
